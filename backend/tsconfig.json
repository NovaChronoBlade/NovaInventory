{
    "compilerOptions": {
      "target": "ES6",                                
      "module": "CommonJS",                           
      "rootDir": "./src",                            
      "outDir": "./dist",                            
      "strict": false,                                
      "esModuleInterop": true,                       
      "forceConsistentCasingInFileNames": true,      
      "skipLibCheck": true,                          
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,                    
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  